<%= form_for(@user_job_proposal) do |f| %>
  <% if @user_job_proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_job_proposal.errors.count, "error") %> prohibited this user_job_proposal from being saved:</h2>

      <ul>
      <% @user_job_proposal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div style="font-size: 34px;padding-top: 15px;padding-bottom: 10px;">Description of your bid</div>
  <div class="field">
    
    <%= f.label :proposal_details %><br />
    <li>Don't include contact info?</li>
    <li>Don't know pricing details yet? Ask for more info below and submit? </li>
    <%= f.text_area :proposal_details, :class => 'pro_fields', :id => 'pro_details' %>
  </div>
  <div class="field">
    <%= f.label :proposal_cost %><br />
    <%= f.text_field :proposal_cost, :class => 'pro_fields', :placeholder => '     $ 45'  %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :job_id, :value => params[:id] %>
  <div class="actions" id = "sub_pro">
    <%= f.submit "Bid", :class=> 'btn btn-primary' %>
  </div>
<span style="color: #808080">Bids are only shown to Presenter.</span>
<% end %>
